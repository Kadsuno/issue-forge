# Application Configuration
APP_NAME="IssueForge"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL="http://localhost"

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP CLI Server Configuration
PHP_CLI_SERVER_WORKERS=4

# Password Hashing
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# Supported: sqlite, mysql, mariadb, pgsql, sqlsrv
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=issueforge
# DB_USERNAME=root
# DB_PASSWORD=

# Session Configuration
# Supported: file, cookie, database, memcached, redis, dynamodb, array
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting Configuration
BROADCAST_CONNECTION=log

# Filesystem Configuration
FILESYSTEM_DISK=local

# Queue Configuration
# Supported: sync, database, beanstalkd, sqs, redis, null
QUEUE_CONNECTION=database

# Cache Configuration
# Supported: file, database, memcached, redis, dynamodb, octane, array
CACHE_STORE=database
# CACHE_PREFIX=

# Memcached Configuration
MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# Supported: smtp, sendmail, mailgun, ses, postmark, log, array, failover, roundrobin
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Third-Party Services Configuration

# AWS Configuration (for S3, SES, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# API Configuration
# The version string used in API URLs (e.g., /api/v1)
API_VERSION=v1
# Admin bearer token for API authentication - MUST be set in production!
# Generate with: php artisan tinker --execute="echo bin2hex(random_bytes(32));"
API_ADMIN_TOKEN=

# Frontend Build Configuration
VITE_APP_NAME="${APP_NAME}"
